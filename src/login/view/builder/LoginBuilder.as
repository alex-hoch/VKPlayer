		public function buildLoginView(authorizationLink:String):void {
			var view:LoginView = _viewRegisterManager.createView(LoginView) as LoginView;
			var stage:Stage = NativeApplication.nativeApplication.activeWindow.stage;
			view.loginPM.initData(authorizationLink, stage.stageWidth, stage.stageHeight);
			stage.addChild(view);
			view.init();
		}

